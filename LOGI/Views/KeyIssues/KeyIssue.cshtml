    <meta name="twitter:description" content="@Model.KeyIssue.MetaDescription">
    <meta name="twitter:image" content="@Html.AbsoluteURL(Url.Content("~/" + Server.UrlEncode(Model.KeyIssue.FeatureImageURL)))">




