@using LOGI.Models.ViewModels;
@model KeyIssueViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model.KeyIssue.Title;
    bool isArabic = CultureHelper.GetCurrentCulture().Contains("ar");
}
@section MetaData{
