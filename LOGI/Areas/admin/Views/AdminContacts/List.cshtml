@{
    ViewBag.Title = "List Of Messages";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="@Url.Content("~/Content/plugins/dataTables.bootstrap.css")" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Contact Messages</h1>
    </div>
</div>

@using (Html.BeginForm())
{

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-sources">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Full Name</th>
                                <th>Phone</th>
                                <th>Country</th>
                                <th>Message</th>
                                <th>Contact Date</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>


        </div>

       
    </div>
}
@section scripts {
    <script src="@Url.Content("~/Scripts/plugins/dataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/dataTables/dataTables.bootstrap.js")"></script>
    <script>
    $(document).ready(function () {
        var cat_table = $('#dataTables-sources').DataTable({
            serverSide: true,
            "ajax":
            {
                url: "/Admin/AdminContacts/_MessagesList",
                type: 'POST'
            },
            "columns": [
                         { "data": "Email" },
                         { "data": "FullName" },
                         { "data": "Phone" },
                         { "data": "Country" },
                         { "data": "Message" },
                         {"data" : "ContactDate"}
                   
            ],
            "lengthMenu": [[10, 20, 50], [10, 25, 50]]

        });


    });


    </script>
}
