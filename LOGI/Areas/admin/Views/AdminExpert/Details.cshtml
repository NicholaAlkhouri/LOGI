@model LOGI.Models.Expert

@{
    ViewBag.Title = "Expert Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Expert Applicaoin Details @using (Html.BeginForm("Delete", "AdminExpert", FormMethod.Post, new { id = "deleteForm", onsubmit = "setFormSubmitting()" }))
            {
                <input type="submit" onclick="return confirm('are you sure you want to delete this application?')" class="btn btn-danger" value="Delete" />
                @Html.HiddenFor(m => m.ID)
            }
        </h1>

    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Expert Application Information
            </div>
            <div class="panel-body">
                @if (Model.ResumeURL != null && Model.ResumeURL != "")
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.ResumeURL):<br />

                        <a href="@Model.ResumeURL" target="_blank">download</a>

                    </div>
                }

                <div class="form-group">
                    @Html.LabelFor(m => m.FullName):<br />
                    @Model.FullName
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email):<br />
                    @Model.Email
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Phone):<br />
                    @Model.Phone
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Expertise):<br />
                    @Model.Expertise
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Education):<br />
                    @Model.Education
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.PoliticalAffiliation):<br />
                    @Model.PoliticalAffiliation
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.WhyToJoin):<br />
                    @Model.WhyToJoin
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Message):<br />
                    @Model.Message
                </div>
            </div>
        </div>

    </div>


</div>

