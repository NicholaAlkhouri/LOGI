@{
    ViewBag.Title = "List Of Vacancies";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="@Url.Content("~/Content/plugins/dataTables.bootstrap.css")" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Vacancies <a href="@Url.Action("New","AdminVacancy")" class="btn btn-outline btn-primary btn-xs">Add New Vacancy</a></h1>
    </div>
</div>

@using (Html.BeginForm())
{

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">

                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-vacancies">
                        <thead>
                            <tr>
                                <th>Job Number</th>
                                <th>Deadline</th>
                                <th>Title</th>
                                <th>Role Summary</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>


        </div>

       
    </div>
}
@section scripts {
    <script src="@Url.Content("~/Scripts/plugins/dataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/dataTables/dataTables.bootstrap.js")"></script>
    <script>
    $(document).ready(function () {
        var cat_table = $('#dataTables-vacancies').DataTable({
            serverSide: true,
            "ajax":
            {
                url: "/Admin/AdminVacancy/_VacanciesList",
                type: 'POST'
            },
            "columns": [
                         { "data": "JobNumber" },
                         { "data": "DeadLine" },
                         { "data": "Title" },
                         { "data": "RoleSummary" },
                         
                   {
                       "data": "ID",
                       "render": function (data, type, full, meta) {
                           return '<a href="@(Url.Action("Edit", "AdminVacancy"))/' + data + '" class="btn btn-outline btn-primary btn-sm">Details</a>';
                       },
                       "sortable": false
                   }
            ],
            "lengthMenu": [[10, 20, 50], [10, 25, 50]]

        });


    });


    </script>
}
