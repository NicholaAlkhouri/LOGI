@model LOGI.Areas.admin.Models.ViewModels.AdminTopicsListViewModel
@{
    ViewBag.Title = "List Of Key Issues";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="@Url.Content("~/Content/plugins/dataTables.bootstrap.css")" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Key Issues <a href="@Url.Action("New","AdminKeyIssue")" class="btn btn-outline btn-primary btn-xs">Add New Key Issue</a></h1>
    </div>
</div>

@using (Html.BeginForm())
{

    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">

                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-keyissue">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Online</th>
                                <th>Featured</th>
                                <th>Scroller</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>


        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Filtering
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="Images" class="control-label">Topic</label>
                        @Html.EditorFor(m => m.TopicID)
                    </div>
                    <input type="submit" class="btn btn-primary" value="Filter" />
                </div>
            </div>
        </div>

    </div>
}
@section scripts {
    <script src="@Url.Content("~/Scripts/plugins/dataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Scripts/plugins/dataTables/dataTables.bootstrap.js")"></script>
    <script>
        $(document).ready(function () {
            var cat_table = $('#dataTables-keyissue').DataTable({
                serverSide: true,
                "ajax":
                {
                    url: "/Admin/AdminKeyIssue/_KeyIssuesList",
                    type: 'POST',
                    'data': {
                        TopicID : @(Model.TopicID)
                        }
                },
                "columns": [
                             { "data": "Title" },
                             { "data": "IsOnline", "render": function (data, type, full, meta) {
                                 if(data)
                                     return "Yes";
                                 else 
                                     return "No";
                                
                             }  },
                             { "data": "IsFeatured", "render": function (data, type, full, meta) {
                                 if(data)
                                     return "Yes";
                                 else 
                                     return "No";
                                
                             }   },
                             { "data": "InScroller" , "render": function (data, type, full, meta) {
                                 if(data)
                                     return "Yes";
                                 else 
                                     return "No";
                                
                             }  },
                               {
                                   "data": "ID",
                                   "render": function (data, type, full, meta) {
                                       return '<a href="@(Url.Action("Edit", "AdminKeyIssue"))/' + data + '" class="btn btn-outline btn-primary btn-sm">Edit</a>';
                                   },
                                   "sortable": false
                               }
                ],
                "lengthMenu": [[10, 20, 50], [10, 25, 50]]

            });


        });


    </script>
}
