@using LOGI.Models.ViewModels;
@model OfficialDocsViewModel

@{
    ViewBag.Title = "About |OFFICIAL DOCUMENTATION";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            OFFICIAL DOCUMENTATION
        </h1>
    </div>
</div>
@using (Html.BeginForm("Index", "AdminAbout", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "setFormSubmitting()" }))
{
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    White Paper:
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @if (Model.Whitepaper != null && Model.Whitepaper.Value != "")
                        {
                            <a href="@Model.Whitepaper.Value" target="_blank">download pdf</a>
                            <br />
                            <span>or </span><label for="Images" class="control-label">Upload New File:</label>
                        }
                        else
                        {
                            <label for="Images" class="control-label">Upload File:</label>
                        }

                        <input type="file" id="PDF" name="whitepaper">
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Arabic White Paper:
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @if (Model.WhitepaperAr != null && Model.WhitepaperAr.Value != "")
                        {
                            <a href="@Model.WhitepaperAr.Value" target="_blank">download pdf</a>
                            <br />
                            <span>or </span><label for="Images" class="control-label">Upload New File:</label>
                        }
                        else
                        {
                            <label for="Images" class="control-label">Upload File:</label>
                        }

                        <input type="file" id="PDF" name="whitepaperAr">
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    LOGI Membership Charter:
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @if (Model.ByLaws != null && Model.ByLaws.Value != "")
                        {
                            <a href="@Model.ByLaws.Value" target="_blank">download pdf</a>
                            <br />
                            <span>or </span><label for="Images" class="control-label">Upload New File:</label>
                        }
                        else
                        {
                            <label for="Images" class="control-label">Upload File:</label>
                        }

                        <input type="file" id="PDF" name="bylaws">
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Gift Acceptance Policy:
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @if (Model.GiftAcceptance != null && Model.GiftAcceptance.Value != "")
                        {
                            <a href="@Model.GiftAcceptance.Value" target="_blank">download pdf</a>
                            <br />
                            <span>or </span><label for="Images" class="control-label">Upload New File:</label>
                        }
                        else
                        {
                            <label for="Images" class="control-label">Upload File:</label>
                        }

                        <input type="file" id="PDF" name="giftAcceptance">
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    REGISTRATION DOCUMENTS:
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @if (Model.Registration != null && Model.Registration.Value != "")
                        {
                            <a href="@Model.Registration.Value" target="_blank">download pdf</a>
                            <br />
                            <span>or </span><label for="Images" class="control-label">Upload New File:</label>
                        }
                        else
                        {
                            <label for="Images" class="control-label">Upload File:</label>
                        }

                        <input type="file" id="PDF" name="registration">
                    </div>
                </div>
            </div>


        </div>
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Publish
                </div>
                <div class="panel-body">
                    <input type="submit" class="btn btn-primary" value="Save Changes" />
                </div>
            </div>

        </div>

    </div>
}

